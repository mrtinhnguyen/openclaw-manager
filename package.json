{
  "name": "clawdbot-manager",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.23.0",
  "engines": {
    "node": ">=22.12.0"
  },
  "devDependencies": {
    "@changesets/cli": "2.28.1"
  },
  "scripts": {
    "dev": "pnpm --filter clawdbot-manager-api dev:all",
    "dev:web": "pnpm --filter clawdbot-manager-web dev",
    "dev:api": "pnpm --filter clawdbot-manager-api dev",
    "manager:cli": "node scripts/manager-cli.mjs",
    "manager:status": "node scripts/manager-cli.mjs status",
    "manager:sandbox": "node scripts/manager-cli.mjs sandbox",
    "manager:verify": "node scripts/manager-cli.mjs verify",
    "manager:ps": "node scripts/manager-cli.mjs ps",
    "manager:stop-all": "node scripts/manager-cli.mjs stop-all",
    "manager:reset": "pnpm --filter openclaw-manager build && node scripts/manager-cli.mjs reset",
    "manager:sandbox-stop": "node scripts/manager-cli.mjs sandbox-stop",
    "manager:apply": "node scripts/manager-cli.mjs apply",
    "manager:login": "node scripts/manager-cli.mjs login",
    "manager:quickstart": "node scripts/manager-cli.mjs quickstart",
    "manager:probe": "node scripts/manager-cli.mjs probe",
    "manager:discord-token": "node scripts/manager-cli.mjs discord-token",
    "manager:ai-auth": "node scripts/manager-cli.mjs ai-auth",
    "manager:pairing-approve": "node scripts/manager-cli.mjs pairing-approve",
    "manager:pairing-prompt": "node scripts/manager-cli.mjs pairing-prompt",
    "manager:pairing-wait": "node scripts/manager-cli.mjs pairing-wait",
    "manager:gateway-start": "node scripts/manager-cli.mjs gateway-start",
    "manager:gateway-stop": "node scripts/manager-cli.mjs gateway-stop",
    "manager:server-stop": "node scripts/manager-cli.mjs server-stop",
    "build:openclaw-manager": "pnpm build && node scripts/build-openclaw-manager.mjs",
    "build": "pnpm -r --if-present build",
    "lint": "pnpm -r --if-present lint",
    "deploy:pages": "pnpm --filter clawdbot-manager-web deploy:pages",
    "changeset": "changeset",
    "release:check": "pnpm build:openclaw-manager && pnpm lint && pnpm -r --if-present tsc",
    "release:version": "changeset version",
    "release:publish": "pnpm release:check && changeset publish"
  }
}
